@page
@model OrdersAppUI.Pages.CreateProviderModel
@{
    ViewBag.Workflow = "CreateProvider";
}
@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-success">@TempData["message"]</div>
}
<form method="post">
    <div class="form-group my-2">
        <label asp-for="Provider.Name"></label>
        <div>
            <span asp-validation-for="Provider.Name" class="text-warning"></span>
        </div>
        <input asp-for="Provider.Name" class="form-control" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-success">Create</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>




